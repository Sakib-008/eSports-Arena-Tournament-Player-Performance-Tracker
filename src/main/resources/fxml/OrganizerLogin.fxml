<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25"
            fx:controller="com.esports.arena.OrganizerLoginController"
            stylesheets="@../css/styles.css" style="-fx-background-color: #f5f5f5;">

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 60;">

            <Label text="Organizer Login" styleClass="dashboard-title" style="-fx-text-fill: #0f3460;"/>
            <Label text="Access organizer dashboard" style="-fx-text-fill: #666; -fx-font-size: 14px;"/>

            <Separator />

            <GridPane hgap="15" vgap="15" alignment="CENTER" styleClass="form-card" style="-fx-padding: 20;">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" />
                    <ColumnConstraints halignment="LEFT" />
                </columnConstraints>
                <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label" />
                <TextField fx:id="usernameField" promptText="Enter username" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="form-input" />

                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label" />
                <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="form-input" />
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="loginBtn" text="Login" onAction="#handleLogin" styleClass="primary-button" prefWidth="120"/>
                <Button fx:id="cancelBtn" text="Cancel" onAction="#handleCancel" styleClass="danger-button" prefWidth="120"/>
            </HBox>

            <Label fx:id="helpLabel" text="" style="-fx-text-fill: #f39c12; -fx-font-weight: bold;" />

        </VBox>
    </center>

</BorderPane>
