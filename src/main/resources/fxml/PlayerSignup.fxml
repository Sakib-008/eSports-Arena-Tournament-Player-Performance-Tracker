<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25"
            fx:controller="com.esports.arena.PlayerSignupController"
            stylesheets="@../css/styles.css" style="-fx-background-color: #f5f5f5;">

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">

            <Label text="Player Signup" styleClass="dashboard-title" style="-fx-text-fill: #0f3460;"/>
            <Label text="Create a new player account" style="-fx-text-fill: #666; -fx-font-size: 14px;"/>

            <Separator />

            <ScrollPane style="-fx-background-color: transparent;">
                <GridPane hgap="15" vgap="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 5;">
                    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                    <TextField fx:id="usernameField" promptText="Choose a username" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250"/>

                    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                    <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Confirm Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Real Name:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                    <TextField fx:id="realNameField" promptText="Your full name" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                    <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                    <TextField fx:id="emailField" promptText="Your email address" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                    <Label text="Role:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                    <ComboBox fx:id="roleCombo" prefWidth="250" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                </GridPane>
            </ScrollPane>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="signupBtn" text="Create Account" onAction="#handleSignup" styleClass="success-button" prefWidth="150"/>
                <Button fx:id="cancelBtn" text="Cancel" onAction="#handleCancel" styleClass="danger-button" prefWidth="150"/>
            </HBox>

            <Label fx:id="errorLabel" text="" style="-fx-text-fill: #e94560; -fx-font-weight: bold;" />
            <Label fx:id="successLabel" text="" style="-fx-text-fill: #2ecc71; -fx-font-weight: bold;" />

        </VBox>
    </center>

</BorderPane>
