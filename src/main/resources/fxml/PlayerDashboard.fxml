<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.esports.arena.PlayerDashboardController"
            stylesheets="@../css/styles.css">

    <top>
        <VBox styleClass="dashboard-header">
            <Label text="Player Dashboard" styleClass="dashboard-title"/>
            <HBox spacing="15" alignment="CENTER_LEFT">
                <padding><Insets top="10"/></padding>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="backToMenuBtn" text="Back to Menu"
                        onAction="#handleBackToMenu" styleClass="header-button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="playerTabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Profile" />
            <Tab text="Statistics" />
            <Tab text="My Team" />
            <Tab text="Leader Voting" />
            <Tab text="Leaderboard" />
        </TabPane>
    </center>
</BorderPane>