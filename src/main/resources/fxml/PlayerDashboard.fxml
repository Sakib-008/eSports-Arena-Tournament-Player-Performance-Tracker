<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.esports.arena.PlayerDashboardController"
            stylesheets="@../css/styles.css">

    <top>
        <VBox styleClass="dashboard-header">
            <Label text="Player Dashboard" styleClass="dashboard-title"/>
            <HBox spacing="15" alignment="CENTER_LEFT">
                <padding><Insets top="10"/></padding>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="backToMenuBtn" text="Back to Menu"
                        onAction="#handleBackToMenu" styleClass="header-button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="playerTabPane" tabClosingPolicy="UNAVAILABLE">

            <!-- Profile Tab -->
            <Tab text="Profile">
                <VBox spacing="20" style="-fx-padding: 20;">

                    <!-- Player Info Card -->
                    <VBox spacing="10" styleClass="card">
                        <Label text="Player Information" styleClass="card-title"/>
                        <Separator/>
                        <GridPane hgap="15" vgap="10">
                            <Label text="Username:" styleClass="grid-label"
                                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <Label fx:id="playerNameLabel" text="-" styleClass="grid-value"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="Team:" styleClass="grid-label"
                                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <Label fx:id="playerTeamLabel" text="No Team" styleClass="grid-value"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label text="Role:" styleClass="grid-label"
                                   GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <Label fx:id="playerRoleLabel" text="-" styleClass="grid-value"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label text="K/D Ratio:" styleClass="grid-label"
                                   GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                            <Label fx:id="playerKDLabel" text="0.00" styleClass="grid-value"
                                   GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                            <Label text="Win Rate:" styleClass="grid-label"
                                   GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                            <Label fx:id="playerWinRateLabel" text="0.0%" styleClass="grid-value"
                                   GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                        </GridPane>
                    </VBox>

                    <!-- Availability Card -->
                    <VBox spacing="10" styleClass="card">
                        <Label text="Availability Status" styleClass="card-title"/>
                        <Separator/>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="I am available:"/>
                            <ToggleButton fx:id="availabilityToggle" text="Available"/>
                        </HBox>
                        <Label text="Reason (if unavailable):"/>
                        <TextArea fx:id="availabilityReasonField" prefRowCount="3"
                                  promptText="Enter reason..."/>
                        <Button fx:id="updateAvailabilityBtn" text="Update Status"
                                onAction="#handleUpdateAvailability"
                                styleClass="success-button" maxWidth="Infinity"/>
                    </VBox>

                </VBox>
            </Tab>

            <!-- Statistics Tab -->
            <Tab text="Statistics">
                <VBox spacing="20" style="-fx-padding: 20;">

                    <!-- Stats Overview Card -->
                    <VBox spacing="10" styleClass="card">
                        <Label text="Performance Statistics" styleClass="card-title"/>
                        <Separator/>
                        <GridPane hgap="30" vgap="15">
                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label text="Total Kills" styleClass="stat-label" style="-fx-text-fill: #333333;"/>
                                <Label fx:id="totalKillsLabel" text="0" styleClass="stat-value, stat-kills"/>
                            </VBox>

                            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label text="Total Deaths" styleClass="stat-label" style="-fx-text-fill: #333333;"/>
                                <Label fx:id="totalDeathsLabel" text="0" styleClass="stat-value, stat-deaths"/>
                            </VBox>

                            <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="0">
                                <Label text="Total Assists" styleClass="stat-label" style="-fx-text-fill: #333333;"/>
                                <Label fx:id="totalAssistsLabel" text="0" styleClass="stat-value, stat-assists"/>
                            </VBox>

                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label text="Matches Played" styleClass="stat-label" style="-fx-text-fill: #333333;"/>
                                <Label fx:id="matchesPlayedLabel" text="0" styleClass="stat-value"/>
                            </VBox>

                            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <Label text="Matches Won" styleClass="stat-label" style="-fx-text-fill: #333333;"/>
                                <Label fx:id="matchesWonLabel" text="0" styleClass="stat-value"/>
                            </VBox>
                        </GridPane>
                    </VBox>

                    <!-- Performance Chart Card -->
                    <VBox spacing="10" styleClass="card" VBox.vgrow="ALWAYS">
                        <Label text="Performance Chart" styleClass="card-title"/>
                        <Separator/>
                        <BarChart fx:id="performanceChart"
                                  legendVisible="false" prefHeight="400">
                            <xAxis>
                                <CategoryAxis fx:id="xAxis" label="Metrics"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="yAxis" label="Count"/>
                            </yAxis>
                        </BarChart>
                    </VBox>

                    <!-- Update Stats Card -->
                    <VBox spacing="10" styleClass="card">
                        <Label text="Record Match Stats" styleClass="card-title"/>
                        <Separator/>
                        <Label text="Enter stats from your latest match:" style="-fx-font-size: 12px;"/>
                        <GridPane hgap="15" vgap="10">
                            <Label text="Kills:" styleClass="grid-label"
                                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <Spinner fx:id="killsSpinner" prefWidth="100"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="Deaths:" styleClass="grid-label"
                                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <Spinner fx:id="deathsSpinner" prefWidth="100"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label text="Assists:" styleClass="grid-label"
                                   GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <Spinner fx:id="assistsSpinner" prefWidth="100"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label text="Match Won:" styleClass="grid-label"
                                   GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                            <CheckBox fx:id="matchWonCheckBox"
                                    GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                        </GridPane>
                        <Button fx:id="recordMatchBtn" text="Record Match Stats"
                                onAction="#handleRecordMatch"
                                styleClass="success-button" maxWidth="Infinity"/>
                    </VBox>

                </VBox>
            </Tab>

            <!-- Team Tab -->
            <Tab text="My Team">
                <VBox spacing="20" style="-fx-padding: 20;">

                    <!-- Team Info Card -->
                    <VBox spacing="10" styleClass="card">
                        <Label text="Team Information" styleClass="card-title"/>
                        <Separator/>
                        <GridPane hgap="15" vgap="10">
                            <Label text="Team Name:" styleClass="grid-label"
                                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <Label fx:id="myTeamNameLabel" text="Not in a team" styleClass="grid-value"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="Wins:" styleClass="grid-label"
                                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <Label fx:id="teamWinsLabel" text="0" styleClass="grid-value"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label text="Losses:" styleClass="grid-label"
                                   GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                            <Label fx:id="teamLossesLabel" text="0" styleClass="grid-value"
                                   GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                            <Label text="Current Leader:" styleClass="grid-label"
                                   GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <Label fx:id="teamLeaderLabel" text="N/A" styleClass="grid-value"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        </GridPane>
                    </VBox>

                    <!-- Team Members Card -->
                    <VBox spacing="10" styleClass="card" VBox.vgrow="ALWAYS">
                        <Label text="Team Members" styleClass="card-title"/>
                        <Separator/>
                        <ListView fx:id="teamMembersList" VBox.vgrow="ALWAYS"/>
                    </VBox>

                </VBox>
            </Tab>

            <!-- Voting Tab -->
            <Tab text="Leader Voting">
                <VBox spacing="20" style="-fx-padding: 20;">

                    <!-- Voting Instructions Card -->
                    <VBox spacing="10" styleClass="card">
                        <Label text="Team Leader Election" styleClass="card-title"/>
                        <Separator/>
                        <Label text="Vote for your preferred team leader. Each team member gets one vote."
                               wrapText="true" style="-fx-text-fill: black;"/>
                        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #f0f0f0; -fx-background-radius: 5;">
                            <Label text="Your Status:" style="-fx-font-weight: bold; -fx-text-fill: black;"/>
                            <Label fx:id="votingStatusLabel" text="Select a player to see voting status"
                                   style="-fx-font-style: italic; -fx-font-weight: bold; -fx-text-fill: #0f3460;"/>
                        </HBox>
                    </VBox>

                    <!-- Candidates Card -->
                    <VBox spacing="10" styleClass="card" VBox.vgrow="ALWAYS">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Select Candidate" styleClass="card-title" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="viewVotingResultsBtn" text="View Current Results"
                                    onAction="#handleViewVotingResults"
                                    styleClass="primary-button"/>
                        </HBox>
                        <Separator/>
                        <Label text="Click on a team member to select them as your vote:" style="-fx-font-size: 12px;"/>
                        <ListView fx:id="voteCandidatesList" VBox.vgrow="ALWAYS"/>
                        <Button fx:id="castVoteBtn" text="Cast Your Vote"
                                onAction="#handleCastVote"
                                styleClass="success-button" maxWidth="Infinity"/>
                    </VBox>

                </VBox>
            </Tab>

        </TabPane>
    </center>
</BorderPane>